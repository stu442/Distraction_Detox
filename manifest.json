{
  "manifest_version": 3,
  "name": "Productive Tool",
  "version": "0.0.1",
  "permissions": [
    "webNavigation",
    "storage",
    "nativeMessaging"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "*://*/*"
  ],
  "web_accessible_resources": [
    {
      "resources": ["redirect.html"],
      "matches": ["<all_urls>"]
    }
  ],
  "action": {
    "default_title": "This is Your Tools",
    "default_popup": "popup.html"
  }
}
